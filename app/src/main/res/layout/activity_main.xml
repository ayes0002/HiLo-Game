<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.ayes0002.guessanumber.MainActivity">

    <TextView
        android:text="@string/app_name"
        android:textSize="17pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/appNameTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="15pt"
        android:textAlignment="center"
        android:ems="3"
        android:maxLength="4"
        android:layout_below="@+id/appNameTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/numberEntry" />

    <Button
        android:text="@string/attempt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/guessButton"
        android:layout_below="@+id/numberEntry"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/whiteText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/guessButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/imageView" />
</RelativeLayout>
